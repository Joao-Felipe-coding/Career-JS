<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <h1 class="title-agenda">Agenda</h1>
  <p class="subtitle-agenda">Seus contatos estão abaixo</p>
  
  <%- include('includes/messages') %>

  <div class="table-container">
    <table class="table">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Sobrenome</th>
          <th>Telefone</th>
          <th>Email</th>
          <th colspan="2" class="text-center">Ações</th>
        </tr>
      </thead>
      <tbody>
        <% contatos.forEach(contato => { %>
        <tr>
          <td><%= contato.nome %></td>
          <td><%= contato.sobrenome %></td>
          <td><%= contato.telefone %></td>
          <td><%= contato.email %></td>
          <td><a href="/contato/index/<%= contato._id %>" class="text-edit">Editar</a></td>
          <td><a href="/contato/delete/<%= contato._id %>" class="text-danger">Excluir</a></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</div>

<%- include('includes/footer') %>