<%- include('includes/head') %>
  <%- include('includes/nav') %>

    <div class="container">

      <%- include('includes/messages'); %>

        <div class="login-container">

          <!-- Coluna de Cadastro -->
          <div class="register-column">
            <h2>Cadastre-se</h2>
            <form action="/login/register" method="POST" class="register-form">
              <input type="hidden" name="_csrf" value=<%=csrfToken %>>
              <div class="form-group">
                <label for="registerEmail">Email</label>
                <input type="email" class="form-control" id="registerEmail" name="email" placeholder="Digite seu email">
              </div>
              <div class="form-group">
                <label for="registerPassword">Senha</label>
                <input type="password" class="form-control" id="registerPassword" name="password"
                  placeholder="Digite sua senha">
              </div>
              <button type="submit" class="btn btn-primary">Cadastrar</button>
            </form>
          </div>

          <!-- Coluna de Login -->
          <div class="login-column">
            <h2>Login</h2>
            <form action="/login/login" method="POST" class="login-form">
              <input type="hidden" name="_csrf" value=<%=csrfToken %>>
              <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Digite seu email">
              </div>
              <div class="form-group">
                <label for="password">Senha</label>
                <input type="password" class="form-control" id="password" name="password"
                  placeholder="Digite sua senha">
              </div>
              <button type="submit" class="btn btn-primary">Entrar</button>
            </form>
          </div>
        </div>
    </div>
    <%- include('includes/footer') %>